<div class="container">
  <div class="row">
    <div class="col-5">
      {{!-- profile --}}
      <div class="m-2">
        <img src="{{user.image}}" class="img-fluid" alt="頭像">
        <div class="m-2">
          <h2 class="fw-bold my-3">{{user.name}}</h2>
          <p class="fw-bold"><i class="fa-solid fa-house me-2"></i>{{user.nation}}</p>
          <strong>About Me</strong>
          <p>{{user.introduction}}</p>
          <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        </div>
      </div>
    </div>
    <div class="col-7">
      {{!-- new schedule --}}
      <div class="mb-3">
        <p class="mb-2"><strong>New Schedule</strong></p>
        <div class="d-flex row">
          {{#each schedules}}
          <div class="col-6 ">
            <div class="border border-3 rounded-3 p-3">
              <div>
                <p class="mb-2"><strong>Time: </strong>{{this.date}} ({{this.dayOfWeek}}) {{this.startTime}}-{{this.endTime}}</p>
              </div>
              <div>
                <p class="mb-2"><strong>Teacher's Name: </strong>{{this.Tutor.name}}</p>
              </div>
              <div>
                <p class="mb-2 text-break"><strong>Session Link: </strong><a href="{{this.Tutor.link}}">{{this.Tutor.link}}</a></p>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{!-- lesson history --}}
      <div class="mb-3">
        <p class="mb-2"><strong>Lesson History</strong></p>
        <div class="d-flex row">
          {{#each histories}}
          <div class="col-6 ">
            <div class="d-flex flex-wrap justify-content-between align-items-center border border-3 rounded-3 p-3">
                <i class="fa-regular fa-user"></i>
                <p class="mx-2 mb-0"><strong>{{this.Tutor.name}}</strong></p>
                <a class="ms-auto btn btn-primary" href="/comments/{{this.id}}">Score</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      {{!-- user ranking --}}
      <div>
        <p class="mb-2"><strong>我的學習時數名次</strong></p>
        <div class="m-2 px-2">
          {{#ifEqual userIndex -1}}
          <h3 class="fw-bold">查無名次</h3>
          {{else}}
          <h3 class="fw-bold">第 {{increment userIndex}} 名</h3>
          {{/ifEqual}}
        </div>
      </div>
    </div>
  </div>
</div>